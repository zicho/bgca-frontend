{
	"name": "bgca-frontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"remember-disclaimer": "node -e \"console.log('Remember to use the latest swagger.json when updating client!')\"",
		"done-generating": "node -e \"console.log('Client generated!')\"",
		"generate": "npm run remember-disclaimer && npx openapi --input swagger.json --output ./src/lib/api/generated --name AppClient --client axios && npm run done-generating",
		"vercel-generate": "npm run remember-disclaimer && npx openapi --input https://bgca-api.azurewebsites.net/swagger/v1/swagger.json --output ./src/core/api/generated --name AppClient --client axios && npm run done-generating"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@tailwindcss/typography": "^0.5.9",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"openapi-generator": "^0.1.39",
		"openapi-typescript-codegen": "^0.24.0",
		"postcss": "^8.4.23",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.62.0",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"sveltekit-superforms": "^0.8.4",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.2.0",
		"vitest": "^0.25.3",
		"zod": "^3.21.4"
	},
	"type": "module",
	"dependencies": {
		"@picocss/pico": "^1.5.9",
		"axios": "^1.4.0",
		"cookie": "^0.5.0",
		"daisyui": "^2.51.6",
		"jwt-decode": "^3.1.2"
	}
}
